const int LEYE = 2;
const int REYE = 3;

void setup() {
  Serial.begin(9600);
  //attachInterrupt( digitalPinToInterrupt(LEYE), ir_isr, CHANGE);
  // attachInterrupt( digitalPinToInterrupt(REYE), ir_isr, CHANGE); ////////////////////////
  pinMode( LEYE, INPUT );
  pinMode( REYE, INPUT );
}

int lastL_EyeValue = LOW;
int lastR_EyeValue = LOW;

void loop() {

 int L_eyeValue = digitalRead( LEYE );
 if( L_eyeValue != lastL_EyeValue ){
 Serial.println("A change from left eye!");
 delay(1000);
 lastL_EyeValue = L_eyeValue;
 }
 int R_eyeValue = digitalRead( REYE );
 if( R_eyeValue != lastR_EyeValue ){
 Serial.println("A change from right eye!");
 delay(1000);
 lastR_EyeValue = R_eyeValue;
 }
}
